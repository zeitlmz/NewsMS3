<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.newsms.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NewsServlet</servlet-name>
        <servlet-class>com.newsms.controller.NewsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NewsServlet</servlet-name>
        <url-pattern>/News</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>topic</servlet-name>
        <servlet-class>com.newsms.controller.TopicController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>topic</servlet-name>
        <url-pattern>/topic</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.newsms.controller.HelloServlet</servlet-class>
        <init-param>
            <param-name>myXml</param-name>
            <param-value>/web/WEB-INF/web.xml</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/HelloServlet</url-pattern>
    </servlet-mapping>
</web-app>